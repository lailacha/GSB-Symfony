        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
       {% if app.user %}
       {% include('partials/sommaire.html.twig') %}
           {% for message in app.flashes('sucess') %}
               <div class="alert alert-success flash-message mx-auto">
                   <h4>{{ message }} </h4>
               </div>
           {% endfor %}
           {% for message in app.flashes('error') %}
               <div class="alert alert-danger flash-message mx-auto">
                   <h4>{{ message }} </h4>
               </div>
           {% endfor %}
       {% endif %}
        <div id="page" class="container-fluid align-items-center ">
        {% block body %}
    
        {% endblock %}

    </div>
    </body>
</html>
