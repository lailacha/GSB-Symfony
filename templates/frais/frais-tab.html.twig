                <tr>
                    <th>Libelle</th>
                    <th>Date</th>
                    <th>Montant</th>
                    <th class="pl-2">
                    </th>

                </tr>
                </thead>
                <tbody>
                {% for fraisHF in fraisHF %}
                    <tr>
                        <td scope="row">{{fraisHF.libelle}}</td>
                        <td>{{fraisHF.date |date('d/m/y')}}</td>
                        <td class="p-2">{{fraisHF.montant}}</td>
                        <td class="p-2">

                            <label class="img-fluid img-check">
